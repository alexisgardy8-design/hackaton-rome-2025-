# Environment variables for backend
# Copy this file to .env and fill in your values

# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/hackathon_rome"

# JWT Secret
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT Expiration (optional, defaults to 7d)
JWT_EXPIRES_IN="7d"

# XRPL Configuration
# Testnet: wss://s.altnet.rippletest.net:51233
# Mainnet: wss://xrplcluster.com
XRPL_SERVER="wss://s.altnet.rippletest.net:51233"

# Platform XRPL wallet seed for receiving and managing investments
# Generate with: POST /api/xrpl/wallet/generate or use Testnet faucet
# ⚠️ CRITICAL: Never commit real wallet seeds! Use .env for local development
XRPL_PLATFORM_SEED="sEdTM1uX8pu2do5XvTnutH6HsouMaM2"

# Platform XRPL wallet address for receiving investments
# This should match the address derived from XRPL_PLATFORM_SEED
PLATFORM_WALLET_ADDRESS="rPEPPER7kfTD9w2To4CQk6UCfuHM9c6GDY"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS (comma-separated list of allowed origins)
CORS_ORIGIN="http://localhost:5173,http://localhost:5174"
