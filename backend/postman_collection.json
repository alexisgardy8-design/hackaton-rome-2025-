    {
      "name": "Campaigns",
      "item": [
        {
          "name": "Create Campaign",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer YOUR_STARTUP_TOKEN_HERE"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Revolutionary AI Platform\",\n  \"description\": \"Building the next generation of AI-powered solutions for businesses worldwide. Our platform leverages cutting-edge technology.\",\n  \"goalAmount\": 50000,\n  \"startDate\": \"2025-01-01T00:00:00Z\",\n  \"endDate\": \"2025-04-01T00:00:00Z\",\n  \"imageUrl\": \"https://example.com/campaign-image.jpg\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/campaigns",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "campaigns"]
            }
          }
        },
        {
          "name": "Get All Campaigns",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/campaigns?limit=20&offset=0",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "campaigns"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "offset",
                  "value": "0"
                },
                {
                  "key": "status",
                  "value": "ACTIVE",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Campaign by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/campaigns/:campaignId",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "campaigns", ":campaignId"],
              "variable": [
                {
                  "key": "campaignId",
                  "value": "CAMPAIGN_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Update Campaign",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer YOUR_STARTUP_TOKEN_HERE"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"ACTIVE\"\n}"
            },
